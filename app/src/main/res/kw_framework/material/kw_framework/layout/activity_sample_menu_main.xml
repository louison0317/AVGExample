<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.scu.avgexample.sample.SampleMenuMainActivity">

    <FrameLayout
        android:id="@+id/containerFrameLayout"
        android:layout_width="540dp"
        android:layout_height="960dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menuBackgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/kw_menu_background" />

        <ImageView
            android:id="@+id/menuLogoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/kw_menu_logo" />

        <ImageView
            android:id="@+id/menuCharacterImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/kw_menu_background_character" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:text="Copyright © 2019-2020 Kawa Studio All rights reserved (Version 1.0.2)"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/menuButtonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="100dp"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <Button
                android:id="@+id/menuSampleButton"
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kw_menu_button_background"
                android:paddingBottom="20dp"
                android:text="開始範例遊戲"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menuSwitchSceneButton"
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kw_menu_button_background"
                android:paddingBottom="20dp"
                android:text="章節快速跳轉"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menuExitButton"
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kw_menu_button_background"
                android:paddingBottom="20dp"
                android:text="結束"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
