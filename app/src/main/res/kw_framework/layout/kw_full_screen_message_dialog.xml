<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/dialogMessageFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="visible">

        <tw.edu.scu.avgexample.framework.library.KWTypewriterTextView
            android:id="@+id/dialogMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="16sp"
            android:padding="25dp"
            android:text="訊息文字"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/dialogHintIGifmageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/kw_message_dialog_hint_arrow" />

    </FrameLayout>

</FrameLayout>